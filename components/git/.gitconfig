[user]
  name = Kyle Henderson
  email = kyle1101000@gmail.com

[commit]
	template = /Users/kylehenderson/dot_files/components/git/commitTemplate

[core]
  editor = vim
	excludesfile = /Users/kylehenderson/dot_files/components/git/.gitignore_global

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[push]
  default = current

[alias]
  lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
  d = difftool

[diff]
  tool = vimdiff

[difftool]
  prompt = false
